{{# each foods}}
<div class="row">
	{{# each this}}
	<div class="col-sm-6 col-md-4">
		<div class="thumbnail">
		  <img src="{{this.img}}" alt="...">
		  <div class="caption">
			<h3>{{this.title}}</h3>
			<p>
				<div class="description">
					{{this.description}}
				</div>
			</p>
			<div class="clearfix">
			<div class="price pull-left">Price: ${{this.price}}</div>
			<div>
				<a href="/add-to-cart/{{ this._id }}" class="btn btn-success pull-right">Add to Cart</a>
			</div>
			</div>
			
		  </div>
		</div>
	</div>
	{{/each}}
</div>
{{/each}}


